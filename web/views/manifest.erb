<?xml version="1.0" encoding="UTF-8" ?>

<ApplicationManifest xmlns="http://schemas.google.com/ApplicationManifest/2009">
  <Name>Watch Dog</Name>
  <Description>Easily reassing Google Drive documents ownership in your Google Domain</Description>

  <!-- Administrators and users will be sent to this URL for application support -->
  <Support>
    <Link rel="support" href="http://watchdog-hache2i.herokuapp.com/support" />
  </Support>

  <!-- Show this link in Google's universal navigation for all users -->
  <Extension id="navLink" type="link">
    <Name>Watch Dog</Name>
    <Url><%= url_for('/login?openid_identifier=${DOMAIN_NAME}') %></Url> 
    <Scope ref="driveAPI"/>
    <Scope ref="adminAPI"/>
  </Extension>

  <!-- Declare our OpenID realm so our app is white listed -->
  <Extension id="realm" type="openIdRealm">
    <Url><%= url_for('') %></Url>
  </Extension>

  <!-- Need access to the Drive API -->
  <Scope id="driveAPI">
    <Url>https://www.googleapis.com/auth/drive</Url>
    <Reason>Show users files.</Reason>
  </Scope>

  <Scope id="adminAPI">
    <Url>https://www.googleapis.com/auth/admin.directory.user</Url>
    <Reason>Retrieve users in domain.</Reason>
  </Scope>

</ApplicationManifest>
